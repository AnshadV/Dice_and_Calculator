<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ecf0f1"
                    android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="C"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_pminus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="Â±"
                    android:textColor="#ecf0f1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_mod"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="%"
                    android:textColor="#ecf0f1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#055F51"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="+"
                    android:textColor="#ecf0f1"
                    android:textSize="30sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="1"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="2"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="3"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#055F51"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="-"
                    android:textColor="#ecf0f1"
                    android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="4"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="5"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="6"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_mul"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#055F51"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="X"
                    android:textColor="#ecf0f1"
                    android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="7"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="8"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="9"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_div"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#055F51"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="/"
                    android:textColor="#ecf0f1"
                    android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="0"
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:backgroundTint="#010505"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="."
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:backgroundTint="#40756F"
                    android:insetTop="0dp"
                    android:insetBottom="1dp"
                    android:text="="
                    android:textColor="#ecf0f1"
                    android:textSize="20sp" />

        </LinearLayout>


</LinearLayout>
